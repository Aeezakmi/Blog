{% extends 'base.html.twig' %}

{% block main %}

    <div class="container body-content span=8 offset=2">
        <form class="form-horizontal" action="{{ path('user_register') }}" method="post">
            <fieldset>
                <legend>Register</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Email</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control"	name="user[email]"	placeholder="Email">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Full Name</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control"	name="user[fullName]"	placeholder="Full Name">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Password</label>
                    <div class="col-sm-4">
                        <input type="password" class="form-control"	name="user[password]"	placeholder="Password">
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('register') }}"/>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <button type="submit" class=" btn btn-primary">Register</button>
                        <button type="reset" class=" btn btn-default">Cancel</button>
                    </div>
                </div>
            </fieldset>
            {{ form_row(form._token) }}
        </form>
    </div>

{% endblock %}


